package key

/*
  #include <linux/input.h>
*/
import "C"

type Code C.__u16

const (
      /*KEYCODES*/
)

var ALL_CODES [KEY_CNT]Code = getAllCodes()

func getAllCodes() [KEY_CNT]Code {
	result := [KEY_CNT]Code{}
	for i := 0; i < int(KEY_CNT); i++ {
		result[i] = Code(i)
	}
	return result
}